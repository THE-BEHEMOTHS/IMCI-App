<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrl_1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#f4eaa3"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/tbl_1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical" >
    </LinearLayout>

     <TextView
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ff69b4"
        android:text="SEVERE JAUNDICE"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#000000"
        android:textStyle="bold" />

     <TextView
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
        android:id="@+id/signsDehydrationPink"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ff69b4"
        android:text="@string/young_treatment_severe_jaundice"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000" />

     <TextView
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFF00"
        android:text="JAUNDICE"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#000000"
        android:textStyle="bold" />

     <TextView
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
        android:id="@+id/space2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ffff00"
        android:text="@string/young_treatment_jaundice"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000" />

     <TextView
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#90EE90"
        android:text="NO JAUNDICE"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#000000"
        android:textStyle="bold" />

     <TextView
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
        android:id="@+id/signsDehydration"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#90ee90"
        android:text="@string/young_treatment_no_jaundice"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000" />

</LinearLayout>