<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0E68C"
    android:orientation="vertical">

    <TextView
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:id="@+id/header_instructions_oral_drugs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/header_instructions_teach_the_mother_oral_drugs"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000" />

    <TextView
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:id="@+id/teach_mother_oral_drugs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/instructions_teach_the_mother_oral_drugs"
        android:textColor="#000000" />

    <ListView
        android:id="@+id/list1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#000000"></ListView>

</LinearLayout>