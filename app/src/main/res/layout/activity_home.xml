<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#f4eaa3"
    android:gravity="center_vertical|center_horizontal"
    android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#f4eaa3"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="155.0dip"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/llAssessment"
                android:layout_width="fill_parent"
                android:layout_height="150.0dip"
                android:background="#ff4444"
                android:orientation="vertical"
                android:padding="1dp">

                <Button
                    android:id="@+id/btnAssessments"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:text="@string/lbl_Assessment"
                    android:textColor="#ffffff"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/linear_counsel_follow"
            android:layout_width="fill_parent"
            android:layout_height="155.0dip"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/llcounselmother"
                android:layout_width="125.0dp"
                android:layout_height="fill_parent"
                android:background="#AA66CC"
                android:orientation="vertical"
                android:padding="1dp">

                <Button
                    android:id="@+id/btnCounselMother"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@null"
                    android:text="@string/lbl_counsel_cap"
                    android:textColor="#ffffff"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llFolloUp"
                android:layout_width="125.0dp"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/llcounselmother"
                android:background="#ffbb33"
                android:orientation="vertical"
                android:padding="1dp">

                <Button
                    android:id="@+id/btnFollowUp"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="@string/lbl_Follow_Up"
                    android:textColor="#ffffff"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/linear_treat_hiv"
            android:layout_width="fill_parent"
            android:layout_height="155.0dip"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/llTreatTheChild"
                android:layout_width="125.0dp"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:background="#99cc00"
                android:orientation="vertical"
                android:padding="1dp">

                <Button
                    android:id="@+id/btnTreatTheChild"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@null"
                    android:text="@string/lbl_treat_cap"
                    android:textColor="#ffffff"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llHivCare"
                android:layout_width="125.0dp"
                android:layout_height="fill_parent"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/llTreatTheChild"
                android:background="#33b5e5"
                android:orientation="vertical"
                android:padding="1dp">

                <Button
                    android:id="@+id/btnNVP"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="@string/lbl_Eid_Testing"
                    android:textColor="#ffffff"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</ScrollView>